@using Prueba2023.Models
@model Persona

<h1>Detalle de la persona</h1>

<dl class="row">
    <dt class="col-sm-2">Identificacion</dt>
    <dt class="col-sm-10">@Model.Identificacion</dt>

    <dt class="col-sm-2">Nombres</dt>
    <dt class="col-sm-10">@Model.Nombres</dt>

    <dt class="col-sm-2">Apellidos</dt>
    <dt class="col-sm-10">@Model.Apellidos</dt>

    <dt class="col-sm-2">Tipo Identificacion</dt>
    <dt class="col-sm-10">@Model.TipoIdentificacion</dt>

    <dt class="col-sm-2">Correo</dt>
    <dt class="col-sm-10">@Model.Correo</dt>
</dl>
<p>
    <a asp-action="Index" class="btn btn-secondary">Regresar a la lista de personas</a>
</p>